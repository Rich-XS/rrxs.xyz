---
import Search from './Search.astro';
---

<header class="bg-white shadow-card rounded-b-xl p-4">
  <div class="container mx-auto flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
    <div class="flex justify-between items-center w-full md:w-auto">
      <a href="/" class="text-2xl font-bold text-primary">rrxs.xyz</a>
      <button id="menu-button" class="md:hidden text-gray-700 hover:text-primary focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
      </button>
    </div>
    <nav id="navigation-menu" class="hidden md:flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4 mt-4 md:mt-0 w-full md:w-auto items-center">
      <ul class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4">
        <li><a href="/" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">首页</a></li>
        <li><a href="/about" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">关于我</a></li>
        <li><a href="/ai-learning" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">AI学习运用</a></li>
        <li><a href="/life" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">心灵生活</a></li>
        <li><a href="/business" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">商务板块</a></li>
        <li><a href="/contact" class="block py-2 px-4 text-gray-700 hover:text-primary rounded-md">联系 & 加入我们</a></li>
      </ul>
      <div class="mt-4 md:mt-0 md:ml-4 w-full md:w-auto">
        <Search />
      </div>
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById("menu-button");
  const navigationMenu = document.getElementById("navigation-menu");

  if (menuButton && navigationMenu) {
    menuButton.addEventListener("click", () => {
      navigationMenu.classList.toggle("hidden");
    });
  }
</script>

