---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} class="group block tech-card p-6 rounded-xl hover:scale-105 transition-all duration-300 cursor-pointer">
  <div class="space-y-3">
    <h3 class="text-xl font-semibold text-card-foreground group-hover:text-primary transition-colors line-clamp-2">
      {title}
    </h3>
    <p class="text-muted-foreground leading-relaxed line-clamp-3">
      {body}
    </p>
    <div class="flex items-center text-primary group-hover:text-primary/80 transition-colors text-sm font-medium">
      阅读更多
      <svg class="ml-1 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
