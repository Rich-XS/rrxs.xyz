---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} class="block bg-white rounded-xl shadow-card p-6 hover:shadow-lg transition-shadow duration-300">
  <h3 class="text-xl font-bold text-gray-800 mb-2">{title}</h3>
  <p class="text-gray-600">{body}</p>
</a>

